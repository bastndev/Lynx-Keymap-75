{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*\\[.+?\\]\\s+build started",
            "endsPattern": "^\\s*\\[.+?\\]\\s+build finished"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "npm: compile",
      "type": "npm",
      "script": "compile",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build"
    }
  ]
}